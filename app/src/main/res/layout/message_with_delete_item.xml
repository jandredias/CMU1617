<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/location_icon_box_message_item"
        android:orientation="vertical"
        android:layout_width="70dp"
        android:gravity="center"
        android:layout_height="70dp">
        <TextView
            android:id="@+id/icon_message_item"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/colorAccent"
            android:background="@drawable/ic_location_on_black_24dp"/>
        <TextView
            android:layout_below="@id/icon_message_item"
            android:id="@+id/location_name_message_item"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:textSize="12sp"
            android:gravity="center"
            android:ellipsize="middle"
            android:maxLines="3"
            android:text="Arco do Cego uma beca maior, mesmo really assssss sadlf jasdlf jlçsdafj asldkf jaklçdf ç "/>
    </LinearLayout>

    <TextView
        android:id="@+id/message_body_message_item"
        android:layout_toRightOf="@id/location_icon_box_message_item"
        android:layout_toLeftOf="@+id/delete_message_item"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"

        android:ellipsize="end"
        android:maxLines="2"
        android:text="Mensagem the beggining only and it gets bigger and bigger but guess waht"/>
    <TextView
        android:id="@+id/message_author_item"
        android:layout_below="@id/message_body_message_item"
        android:layout_toRightOf="@id/location_icon_box_message_item"
        android:layout_toLeftOf="@id/delete_message_item"
        android:layout_width="match_parent"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="25dp"
        android:gravity="end"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        android:text="By: author a guy with a fucking big name lsdfkajlfafjaldkfja"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@id/delete_message_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/red"
        android:tint="@color/white"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_delete_black_24dp"/>
    
</RelativeLayout>