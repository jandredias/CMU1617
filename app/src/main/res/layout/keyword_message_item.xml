<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/keyword_spinner"
        android:layout_width="wrap_content"
        android:entries="@array/keywords_array"
        android:layout_height="match_parent"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/equal_diff_spinner"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:entries="@array/equal_different_array"/>

    <android.support.design.widget.TextInputLayout
    android:id="@+id/layout_keyword"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_text_keyword_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="value"/>
    </android.support.design.widget.TextInputLayout>


</LinearLayout>